
<% include admin_header.ejs %>

<div id="wrap" style="max-width:1000px; margin:0 auto">

<fieldset style="text-align:center">
	<label>Generar un nuevo título</label>
	<form method="POST" action="/admin/add_title?_method=PUT">
		<input type="text" name="n_alumno" placeholder="Nombre" required></input>
		<input type="text" name="a_alumno" placeholder="Apellidos" required></input>
		<input type="text" name="dni" placeholder="DNI" required>
		<input type="number" name="telefono" placeholder="Teléfono" min="600000000" max="799999999" required>
		
		<select name="curso" required>

			<% for(var i in cursos) { %>
			<option value="<%= cursos[i].nombre %>"><%= cursos[i].nombre %></option>
			
			<% } %>

		</select>
		<input type="number" name="horas" placeholder="Horas" min="1" max="300" required><br/>

			<label>Inicio: </label><input type="text" name="inicio" placeholder="29 de Junio de 2015" required>
			<label>Fin: </label><input type="text" name="fin" placeholder="30 de Julio de 2015" required><br/>
		<input type="submit" value="Enviar">
	</form>

	<% if (locals.error_title){ %>

		<span style="color:red"><% error_title %></span>

	<% } %>

</fieldset>

<fieldset style="text-align:center">
<label>Generar un nuevo curso</label>
	<form method="POST" action="/admin/add_course?_method=PUT">
		<input type="text" name="nombre" placeholder="Nombre del curso"></input></br>
		<textarea name="temario" style="width:100%; height:200px" placeholder="Introduce el temario del curso..."></textarea></br>

		<input type="submit" value="Enviar">
	</form>


</fieldset>

</div>